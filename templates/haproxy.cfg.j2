global
    log /dev/log    local0
    log /dev/log    local1 notice
    daemon
    user haproxy
    group haproxy
    stats socket {{ haproxy_socket | default('/run/haproxy/admin.sock') }} mode 660 level admin

defaults
    mode http
    log     global
    option  httplog
    option  dontlognull
    timeout connect 5s
    timeout client  50s
    timeout server  50s
    option http-server-close
    option forwardfor

frontend http_in
    bind *:80
    default_backend web_back

backend web_back
    balance roundrobin
    option httpchk GET /health.php
    http-check expect status 200
{% for host in groups['web'] %}
    server {{ host }} {{ hostvars[host].ansible_host | default(host) }}:80 check fall 3 rise 2
{% endfor %}

listen stats
    bind *:8404
    stats enable
    stats uri /haproxy?stats
    stats refresh 5s
